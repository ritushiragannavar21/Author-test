  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_linkedin | json }},
      {{ settings.social_twitter | json }},
      {{ settings.social_facebook | json }},
      {{ settings.social_pinterest | json }},
      {{ settings.social_instagram | json }},
      {{ settings.social_tiktok | json }},
      {{ settings.social_tumblr | json }},
      {{ settings.social_snapchat | json }},
      {{ settings.social_youtube | json }},
      {{ settings.social_vimeo | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {% assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header position-relative section-header-header-group",
  "settings": [
    {
      "type": "select",
      "id": "logo_position",
      "label": "Layout",
      "options": [
        {
          "value": "logo-center-menu-left",
          "label": "Logo center, menu left"
        },
        {
          "value": "logo-left-menu-center",
          "label": "Logo left, menu center"
        },
        {
          "value": "logo-center-menu-bottom",
          "label": "Logo center, menu bottom"
        },
        {
          "value": "logo-left-menu-left",
          "label": "Logo left, menu left"
        },
        {
          "value": "drawer",
          "label": "Drawer"
        }
      ],
      "default": "logo-center-menu-left"
    },
    {
      "type": "select",
      "id": "dropdown_trigger_type",
      "label": "Open dropdown items on..",
      "info": "Click mode is forced on touch devices.",
      "options": [
        {
          "value": "hover",
          "label": "Hover"
        },
        {
          "value": "click",
          "label": "Click"
        }
      ],
      "default": "hover"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "type": "select",
      "id": "sticky_header_style",
      "label": "Sticky header style",
      "options": [
        {
          "value": "always",
          "label": "Always"
        },
        {
          "value": "on_scroll_up",
          "label": "On scroll up"
        }
      ],
      "default": "always"
    },
    {
      "type": "checkbox",
      "id": "bottom_box_shadow",
      "label": "show bottom shadow",
      "default": true
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "header_logo",
      "label": "Image",
      "info": "270 x 80px .png recommended"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Image width",
      "max": 300,
      "min": 30,
      "step": 10,
      "unit": "px",
      "default": 140
    },
    {
      "type": "range",
      "id": "logo_mobile_width",
      "label": "Image mobile width",
      "max": 180,
      "min": 20,
      "step": 2,
      "unit": "px",
      "default": 134
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },

    {
      "type": "header",
      "content": "Highlight button"
    },
    {
      "type": "text",
      "id": "highlight_heading",
      "label": "Label"
    },
    {
      "type": "url",
      "id": "highlight_link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "use_outline_button_style",
      "label": "Use outline button style",
      "default": false
    },
    {
      "type": "header",
      "content": "Transparent header",
      "info": "Enable this option to make the header transparent."
    },

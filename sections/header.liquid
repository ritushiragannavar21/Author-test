{% liquid
  assign style_transparent_Header = false
  if section.settings.show_on_only_homepage and request.page_type != 'index'
    assign style_transparent_Header = false

  elsif section.settings.enable_transparent_header
    assign style_transparent_Header = true
  endif
%}
{% style %}
  :root  {
    --sticky-header-enabled: {%- if section.settings.enable_sticky -%}
      1{% else %}
      0{% endif %};
  }

  #shopify-section-{{ section.id }} {
    position:

    {%- if section.settings.enable_sticky  -%}
        sticky
    {% else %}
        relative
    {% endif %};
    z-index: 6;
    top: 0;
    left:0;
    right:0;
  }

  {%- if section.settings.enable_sticky  -%}
    .section-annoucement-bar ~ #shopify-section-{{ section.id }} {
      top: calc(var(--sticky-announcement-enabled, 0) * var(--announcement-height, 0px));
      z-index: 6;
    }
  {%- endif -%}

  .logo {
    height: auto;
    width: {{ section.settings.logo_width | append: "px" }}
    ;
    object-fit: contain;
  }

  @media(max-width:767px) {
    .logo {
      width: {{ section.settings.logo_mobile_width | append: "px" }}
    }
  }
{% endstyle %}

{{ 'header.css' | asset_url | stylesheet_tag }} 

{%- if section.settings.menu != blank -%}
  <height-calc class="d-block" variable="header">
    <header-component
      {% if style_transparent_Header %}
        transparent-header
        style="--header-text-color: {{ section.settings.transparent_header_text_color }}"
      {% endif %}
      data-index="{{ section.index }}"
    >
      <nav
        class="navbar  color-{{ section.settings.color_scheme }} {% if section.settings.bottom_box_shadow %} bottom_box_shadow{% endif %}"
        {% if section.settings.enable_sticky and section.settings.sticky_header_style == 'on_scroll_up' %}
          hide-on-scroll
        {% endif %}

        aria-label="Main Navigation"
      >
        <div class="container">
          <div class="header-container {% if section.settings.logo_position != 'drawer' %} {{ section.settings.logo_position }} {% endif %}">
            {% comment %} Header drawer Desktop  {% endcomment %}
            <div class="header-drawer {% if section.settings.logo_position == 'drawer' %} header-drawer--desktop {% endif %}">
              <div>
                <button
                  aria-label="Open Hamburger Drawer"
                  class="d-flex p-0 header__hamberger"
                  drawer-to-open="header"
                  is="open-drawer"
                  type="button"
                  target-portal-element="#portal"
                  section-id="{{ section.id | prepend: 'shopify-section-' }}"
                >
                  {% render 'icon' with 'hamburger' %}
                </button>
              </div>
            </div>

            {% unless section.settings.logo_position == 'logo-left-menu-left'
              or section.settings.logo_position == 'logo-center-menu-bottom'
            %}
              <div
                class="header__menu-wrp {% if section.settings.logo_position == 'drawer' %} hide-nav {% endif %}"
              >
                <ul
                  class="navbar-nav header__nav-list mega-menu dropdown-menu__list-item d-flex"
                  aria-label="Main Navigation"
                >
                  {% for link in section.settings.menu.links %}
                    <li class="nav-item fnt-14">
                      {% if link.links != blank %}
                        {% liquid
                          unless section.blocks == blank
                            assign linkItem = link.title | capitalize
                            assign megamenu = false
                            for block in section.blocks
                              assign menuItem = block.settings.mega_menu_trigger | capitalize
                              if menuItem contains linkItem
                                assign megamenu = true
                              endif
                            endfor
                          endunless
                        %}
                        <header-menu-trigger
                          data-identefier="parent-element"
                          data-trigger="{{ section.settings.dropdown_trigger_type }}"
                        >
                          <details
                            {% unless megamenu %}
                              class="dropdown-nav-item"
                            {% endunless %}
                            aria-label="{{ link.title }}"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            <summary menu-item class="parent-menu__link" role="button">
                              <span class="menu-main-link fnt-14">
                                {{ link.title | escape }}
                                {% render 'icon' with 'caret' %}
                              </span>
                            
                            </summary>
                            {% unless section.blocks == blank %}
                              {% assign showDropdown = true %}
                              {% for block in section.blocks %}
                                {% liquid
                                  assign blockTrigger = block.settings.mega_menu_trigger | capitalize
                                  assign linkText = link.title | capitalize
                                %}

                                {% if blockTrigger contains linkText %}
                                  {% case block.type %}
                                    {% when 'mega_menu_promotion' %}
                                      {% render 'mega-menu-promotion',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu']
                                      %}
                                    {% when 'mega_menu_products' %}
                                      {% render 'mega-menu-products',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu'],
                                        dropdown_trigger_type: section.settings.dropdown_trigger_type
                                      %}

                                    {% when 'mega_menu_collections' %}
                                      {% render 'mega-menu-collections',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu']
                                      %}
                                  {% endcase %}
                                  {% assign showDropdown = false %}
                                  {% break %}
                                {% endif %}
                              {% endfor %}

                              {% if showDropdown %}
                                {% render 'dropdown-nav',
                                  link: link,
                                  colorScheme: section.settings['color_scheme-menu'],
                                  dropdown_trigger_type: section.settings.dropdown_trigger_type
                                %}
                              {% endif %}
                            {% else %}
                              {% render 'dropdown-nav',
                                link: link,
                                colorScheme: section.settings['color_scheme-menu'],
                                dropdown_trigger_type: section.settings.dropdown_trigger_type
                              %}
                            {% endunless %}
                          </details>
                        </header-menu-trigger>
                      {%- else -%}
                        <a
                          href="{{ link.url }}"
                          class="{% if link.current %} active{% endif %} menu-main-link"
                          {% if link.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ link.title | escape }}
                        </a>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endunless %}

            {% comment %} Header Logo {% endcomment %}
            <div
              class="
                logo-container {% if section.settings.logo_position != 'drawer' and section.settings.logo_position != "logo-center-menu-bottom" and section.settings.logo_position != "logo-center-menu-left" %}  align-logo-{{ section.settings.logo_position }}{% endif %}
                {% if section.settings.logo_position != 'drawer' and section.settings.logo_position == "logo-center-menu-bottom" %}
                  align-logo-cente-grid-item
                {% endif %}
              "
            >
              {%- if request.page_type == 'index' -%}
                <h1 class="heading-brand-logo-text h3 m-0">
              {%- endif -%}
              <a class="navbar-brand" href="{{ routes.root_url }}">
                {%- capture size -%}
                  {{ '(min-width: 780px) ' | append: section.settings.logo_width | append: 'px' }},{{ section.settings.logo_mobile_width | append: 'px' }}
                  {%- endcapture -%}
                {%- capture widths -%}
                  {{ section.settings.logo_mobile_width | times: 2 | at_most: section.settings.header_logo.width }},{{ section.settings.logo_width | times: 2 | at_most: section.settings.header_logo.width }}
                  {%- endcapture -%}
                {% assign logo_alt = section.settings.logo.alt | default: shop.name | escape %}
                {% if section.settings.header_logo != blank %}
                  <span class="visually-hidden">{{ shop.name | escape }} </span>
                  {% if section.settings.enable_transparent_header
                    and section.settings.transparent_header_logo != blank
                    and style_transparent_Header
                  %}
                    {{
                      section.settings.transparent_header_logo
                      | image_url: width: section.settings.transparent_header_logo.width
                      | image_tag:
                        alt: logo_alt,
                        widths: widths,
                        sizes: size,
                        loading: 'eager',
                        class: 'transparent-logo logo'
                    }}
                  {% endif %}
                  {{
                    section.settings.header_logo
                    | image_url: width: section.settings.header_logo.width
                    | image_tag: alt: logo_alt, widths: widths, sizes: size, loading: 'eager', class: 'main-logo logo'
                  }}
                {% else %}
                  <span class="logo-text h3">{{ shop.name | escape }}</span>
                {% endif %}
              </a>
              {%- if request.page_type == 'index' -%}
                </h1>
              {%- endif -%}
              {% if section.settings.logo_position != 'drawer'
                and section.settings.logo_position == 'logo-left-menu-left'
              %}
                <div
                  aria-label="Menu"
                  class="header__menu-wrp menu-left "
                >
                  <ul class="navbar-nav header__nav-list mega-menu dropdown-menu__list-item d-flex ">
                    {% for link in section.settings.menu.links %}
                      <li class="nav-item ">
                        {% if link.links != blank %}
                          {% liquid
                            unless section.blocks == blank
                              assign linkItem = link.title | capitalize
                              assign megamenu = false
                              for block in section.blocks
                                assign menuItem = block.settings.mega_menu_trigger | capitalize
                                if menuItem contains linkItem
                                  assign megamenu = true
                                endif
                              endfor
                            endunless
                          %}
                          <header-menu-trigger
                            data-identefier="parent-element"
                           data-trigger="{{ section.settings.dropdown_trigger_type }}"
                          >
                            <details
                              {% unless megamenu %}
                                class="dropdown-nav-item"
                              {% endunless %}
                              aria-label="{{ link.title }}"
                              aria-haspopup="true"
                              aria-expanded="false"
                            >
                              <summary menu-item class="parent-menu__link" role="button">
                                <span class="menu-main-link fnt-14">
                                  {{ link.title | escape }}
                                  {% render 'icon' with 'caret' %}
                                </span>
                              </summary>
                              {% unless section.blocks == blank %}
                                {% assign showDropdown = true %}
                                {% for block in section.blocks %}
                                  {% liquid
                                    assign blockTrigger = block.settings.mega_menu_trigger | capitalize
                                    assign linkText = link.title | capitalize
                                  %}

                                  {% if blockTrigger contains linkText %}
                                    {% case block.type %}
                                      {% when 'mega_menu_promotion' %}
                                        {% render 'mega-menu-promotion',
                                          link: link,
                                          block: block,
                                          colorScheme: section.settings['color_scheme-menu'],
                                          dropdown_trigger_type: section.settings.dropdown_trigger_type
                                        %}
                                      {% when 'mega_menu_products' %}
                                        {% render 'mega-menu-products',
                                          link: link,
                                          block: block,
                                          colorScheme: section.settings['color_scheme-menu'],
                                          dropdown_trigger_type: section.settings.dropdown_trigger_type
                                        %}

                                      {% when 'mega_menu_collections' %}
                                        {% render 'mega-menu-collections',
                                          link: link,
                                          block: block,
                                          colorScheme: section.settings['color_scheme-menu'],
                                          dropdown_trigger_type: section.settings.dropdown_trigger_type
                                        %}
                                    {% endcase %}
                                    {% assign showDropdown = false %}
                                    {% break %}
                                  {% endif %}
                                {% endfor %}
                                {% if showDropdown %}
                                  {% render 'dropdown-nav',
                                    link: link,
                                    colorScheme: section.settings['color_scheme-menu'],
                                    dropdown_trigger_type: section.settings.dropdown_trigger_type
                                  %}
                                {% endif %}
                              {% else %}
                                {% render 'dropdown-nav',
                                  link: link,
                                  colorScheme: section.settings['color_scheme-menu'],
                                  dropdown_trigger_type: section.settings.dropdown_trigger_type
                                %}
                              {% endunless %}
                            </details>
                          </header-menu-trigger>
                        {%- else -%}
                          <a
                            href="{{ link.url }}"
                            class="{% if link.current %} active{% endif %} menu-main-link"
                            {% if link.current %}
                              aria-current="page"
                            {% endif %}
                            aria-label="{{ link.title }}"
                            menu-item
                          >
                            {{ link.title | escape }}
                          </a>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
            </div>

            {% comment %} Header right icons {% endcomment %}
            <div class="d-flex order-3 header__iconGroup">
              <ul class="d-flex">
                {% liquid
                  assign show_highlight_button = false
                  if section.settings.highlight_heading != blank
                    assign show_highlight_button = true
                  endif
                  if section.settings.use_outline_button_style
                    assign button_style = 'border'
                  else
                    assign button_style = 'fill'
                  endif
                %}
                <li class="header-right__nav">
                  <a
                    aria-label="Community"
                    class="d-v-center"
                    href="https://parevabeauty.com/pages/community"
                  > COMMUNITY
                  </a>
                </li>
                <li class="header-right__nav">
                  <a
                    aria-label="Community"
                    class="d-v-center"
                    href="https://parevabeauty.com/pages/community"
                  > Pros
                  </a>
                </li>
                {% if show_highlight_button %}
                  <li class="desktop-only">
                    <a
                      class="btn btn--{{ button_style }} btn--small"
                      href="{{ section.settings.highlight_link }}"
                    >
                      {{ section.settings.highlight_heading }}
                    </a>
                  </li>
                {% endif %}
                <li class="search-icon mb-0">
                  <a
                    search_page_link
                    aria-label="Search"
                    class="btn--transparent header__icon"
                    href="{{ routes.search_url }}"
                  >
                    {% render 'icon' with 'search' %}
                  </a>
                  <button
                    aria-label="Search"
                    class="btn--transparent js-element header__icon d-none"
                    drawer-to-open="search-drawer"
                    is="open-drawer"
                  >
                    {% render 'icon' with 'search' %}
                  </button>
                </li>
                {% if shop.customer_accounts_enabled %}
                  <li class="desktop-only mb-0">
                    <a
                      aria-label="Account"
                      class="d-v-center icon-label header__icon"
                      href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                    >
                      {% render 'icon' with 'account' %}
                    </a>
                  </li>
                {% endif %}
                <li class="mb-0">
                  {% unless settings.cart_type == 'page' %}
                    <button
                      aria-label="{{ 'general.header.cart_count' | t : count : cart.item_count }}"
                      class="header__icon btn--transparent js-element"
                      drawer-to-open="cart-drawer"
                      is="open-drawer"
                    >
                      {% render 'icon' with 'cart' %}
                      <div header-cart-bubble>
                        {%- if cart.item_count > 0 -%}
                          <span class="header__cart__icon-count">{{ cart.item_count }}</span>
                          <span class="visually-hidden" aria-hidden="true">
                            {{- 'general.header.cart_count' | t: count: cart.item_count -}}
                          </span>
                        {%- endif -%}
                      </div>
                    </button>
                  {% else %}
                    <a
                      aria-label="Cart"
                      class="header__icon js-element"
                      href="{{ routes.cart_url }}"
                    >
                      {% render 'icon' with 'cart' %}
                      <div header-cart-bubble>
                        {%- if cart.item_count > 0 -%}
                          <span class="header__cart__icon-count">{{ cart.item_count }}</span>
                          <span class="visually-hidden">{{ cart.item_count }} items</span>
                        {%- endif -%}
                      </div>
                    </a>
                  {% endunless %}
                  <noscript>
                    <a
                      aria-label="Cart"
                      class="header__icon"
                      href="{{ routes.cart_url }}"
                    >
                      {% render 'icon' with 'cart' %}
                      <div>
                        {%- if cart.item_count > 0 -%}
                          <span class="header__cart__icon-count">{{ cart.item_count }}</span>
                          <span class="visually-hidden">{{ cart.item_count }} items</span>
                        {%- endif -%}
                      </div>
                    </a>
                  </noscript>
                </li>
              </ul>
            </div>
          </div>

          {% comment %} Menu at the bottom  {% endcomment %}
          {% if section.settings.logo_position == 'logo-center-menu-bottom'
            and section.settings.logo_position != 'drawer'
          %}
            <div class="menu-bottom">
              <div
                aria-label="Menu"
                class="header__menu-wrp "
                role="navigation"
              >
                <ul class="navbar-nav header__nav-list mega-menu dropdown-menu__list-item d-flex justify-content-center">
                  {% for link in section.settings.menu.links %}
                    <li class="nav-item ">
                      {% if link.links != blank %}
                        {% liquid
                          unless section.blocks == blank
                            assign linkItem = link.title | capitalize
                            assign megamenu = false
                            for block in section.blocks
                              assign menuItem = block.settings.mega_menu_trigger | capitalize
                              if menuItem contains linkItem
                                assign megamenu = true
                              endif
                            endfor
                          endunless
                        %}
                        <header-menu-trigger
                          data-identefier="parent-element"
                          data-trigger="{{ section.settings.dropdown_trigger_type }}"
                        >
                          <details
                            {% unless megamenu %}
                              class="dropdown-nav-item"
                            {% endunless %}
                            aria-label="{{ link.title }}"
                            aria-haspopup="true"
                            aria-expanded="false"
                          >
                            <summary menu-item class="parent-menu__link" role="button">
                              <span class="menu-main-link fnt-14">
                                {{ link.title | escape }}
                                {% render 'icon' with 'caret' %}
                              </span>
                            </summary>
                            {% unless section.blocks == blank %}
                              {% assign showDropdown = true %}
                              {% for block in section.blocks %}
                                {% liquid
                                  assign blockTrigger = block.settings.mega_menu_trigger | capitalize
                                  assign linkText = link.title | capitalize
                                %}

                                {% if blockTrigger contains linkText %}
                                  {% case block.type %}
                                    {% when 'mega_menu_promotion' %}
                                      {% render 'mega-menu-promotion',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu']
                                      %}
                                    {% when 'mega_menu_products' %}
                                      {% render 'mega-menu-products',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu']
                                      %}

                                    {% when 'mega_menu_collections' %}
                                      {% render 'mega-menu-collections',
                                        link: link,
                                        block: block,
                                        colorScheme: section.settings['color_scheme-menu']
                                      %}
                                  {% endcase %}
                                  {% assign showDropdown = false %}
                                  {% break %}
                                {% endif %}
                              {% endfor %}
                              {% if showDropdown %}
                                {% render 'dropdown-nav',
                                  link: link,
                                  colorScheme: section.settings['color_scheme-menu'],
                                  dropdown_trigger_type: section.settings.dropdown_trigger_type
                                %}
                              {% endif %}
                            {% else %}
                              {% render 'dropdown-nav',
                                link: link,
                                colorScheme: section.settings['color_scheme-menu'],
                                dropdown_trigger_type: section.settings.dropdown_trigger_type
                              %}
                            {% endunless %}
                          </details>
                        </header-menu-trigger>
                      {%- else -%}
                        <a
                          role="menuitem"
                          href="{{ link.url }}"
                          class="{% if link.current %} active{% endif %} menu-main-link"
                          {% if link.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ link.title | escape }}
                        </a>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}
        </div>
      </nav>
    </header-component>
  </height-calc>
{% endif %}

{%- if section.settings.hamberger_menu != blank or section.settings.menu != blank -%}
  {% comment %} Hamberger Drawer  {% endcomment %}
  {% render 'hamberger-drawer', section: section %}
{% endif %}


{% liquid
  assign product_feature_media_id = product.selected_or_first_available_variant.featured_media.id | default: product.featured_media.id
  assign product_media = product.media
  assign on_sale = false
  if product.compare_at_price > product.price
    assign on_sale = true
  endif
  assign enable_product_deep_link = true
  assign media_autoplay = section.settings.media_autoplay
  assign layout_type = section.settings.display_options_layout | strip
  assign first_3d_model = product.media | where: 'media_type', 'model' | first
  assign media_type_video = product_media | where: 'media_type', 'video' | size
  assign media_type_external_video = product_media | where: 'media_type', 'external_video' | size
  assign medias = product_media
  unless template.name == 'product'
    assign medias = product_media | where: 'media_type', 'image'
  endunless

  assign enable_media_zoom = section.settings.enable_media_zoom

  assign intersection = ''
  if section.index > 2
    assign intersection = 'intersection-element'
  endif

  assign product_first_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media
%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 | append: 'px' }}
    ;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 | append: 'px' }}
    ;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | append: 'px' }}
      ;
      padding-bottom: {{ section.settings.padding_bottom | append: 'px' }}
      ;
    }
  }
{%- endstyle -%}

{% comment %} Only Render Video styles if video media are present {% endcomment %}
{%- if media_type_video > 0 or media_type_external_video > 0 -%}
  {{ 'section-video.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{{ 'section-product-highlights.css' | asset_url | stylesheet_tag }}

{% comment %} Render Model Viewer Ui css to style buttons and zoom {% endcomment %}
{%- if first_3d_model -%}
  <link
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    id="ModelViewerStyle"
    media="print"
    onload="this.media='all'"
    rel="stylesheet"
  >
{%- endif -%}
{% unless section.settings.border_size == 'hide' %}
  {% if section.settings.border_position == 'both' or section.settings.border_position == 'top' %}
    {% unless section.settings.border_size == 'full_width' %}
      <div class="container">
    {% endunless %}
    <div class="spacer-wrapper color-{{ section.settings.color_scheme }}">
      <div
        class="spacer border-top"
      ></div>
    </div>
    {% unless section.settings.border_size == 'full_width' %}
      </div>
    {% endunless %}
  {% endif %}
{% endunless %}
<div
  class="main-product feature-product section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} "
  data-section-id="{{ section.id }}"
  {% if enable_media_zoom %}
    style="--cursor-zoom-url:url({{ 'zoom-cursor.svg' | asset_url }})"
  {% endif %}
>
  <div class="container">
    {% render 'breadcrumb' %}
    <div
      product-container
      class="{% if section.settings.desktop_media_position == 'right' %} flex-reverse {% else %} res-flex {% endif %} {% if layout_type == 'grid' or layout_type == 'grid-with-main-media' %} sticky-content {% endif %}"
    >
      {% if product_media.size > 0 %}
        <div class="product-media-container product-media-container--{{ section.settings.desktop_media_size }}">
          {% liquid
            if section.settings.image_aspect_ratio_desktop == 'adapt'
              assign add_media_aspect_ratio = true
            else
              assign add_media_aspect_ratio = false
            endif

            if section.settings.image_aspect_ratio_mobile == 'adapt'
              assign add_media_aspect_ratio_mobile = true
            else
              assign add_media_aspect_ratio_mobile = false
            endif
          %}
          <product-carousel
            {{ intersection }}
            class="js-element product-slider--{{ section.settings.display_options_layout }}  {% if layout_type == 'grid' or layout_type == 'grid-with-main-media' %} mobile-only {% endif %}"
            slide-layout-type="carousel"
            slide-pagination-type="bullets"
            slide-per-view="1"
            slide-responsive-breakpoints='{"320":{"slidesPerView": "1","autoHeight":{{ add_media_aspect_ratio_mobile }} },"640":{"slidesPerView":"1","autoHeight": {{ add_media_aspect_ratio }}}}'
            slide-speed="500"
            verticle-thumbnail="{% if section.settings.display_options_layout == 'thumbnail-left' %}true{% else %}false{% endif %}"
            {%- if media_autoplay -%}
              slide-media-autoplay
            {%- endif -%}
            {%- if product_feature_media_id -%}
              slide-to-media="{{ product_feature_media_id | escape }}"
            {%- endif -%}
          >
            <div
              class="swiper"
            >
              <div
                class="swiper-container product-main-slide-container {% unless add_media_aspect_ratio %} aspect-ratio-{{ section.settings.image_aspect_ratio_desktop }} {% endunless %} {% unless add_media_aspect_ratio_mobile %} aspect-ratio-mobile-{{ section.settings.image_aspect_ratio_mobile }} {% endunless %}"
                main-slider
              >
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    {%- if enable_media_zoom and product_first_media.media_type == 'image' -%}
                      <product-zoom class="icon-product-zoom" data-index="{% increment i %}">
                        {%- render 'icon', icon: 'product-zoom-svg' -%}
                      </product-zoom>
                    {%- endif -%}
                    {% render 'media',
                      media: product_first_media,
                      show_preview_image: false,
                      media_autoplay: media_autoplay,
                      media_custom_identifier: 'carousel',
                      add_media_aspect_ratio: add_media_aspect_ratio,
                      add_media_aspect_ratio_mobile: add_media_aspect_ratio_mobile,
                      section: section
                    %}
                  </div>
                  {% for media in medias %}
                    {% if media.id != product_feature_media_id %}
                      <div class="swiper-slide">
                        {%- if enable_media_zoom and media.media_type == 'image' -%}
                          <product-zoom class="icon-product-zoom" data-index="{% increment i %}">
                            {%- render 'icon', icon: 'product-zoom-svg' -%}
                          </product-zoom>
                        {%- endif -%}
                        {% render 'media',
                          media: media,
                          show_preview_image: false,
                          media_autoplay: media_autoplay,
                          forloop: forloop,
                          media_custom_identifier: 'carousel',
                          add_media_aspect_ratio: add_media_aspect_ratio,
                          add_media_aspect_ratio_mobile: add_media_aspect_ratio_mobile,
                          section: section
                        %}
                        {%- if media.media_type == 'model' -%}
                          <button
                            aria-label="{{ 'products.product.xr_button' | t }}"
                            class="btn product__xr-button"
                            data-first-model-id="{{ media.id }}"
                            data-shopify-model3d-id="{{ media.id }}"
                            data-shopify-title="{{ product.title | escape }}"
                            data-shopify-xr
                            data-shopify-xr-hidden
                            shopify-xr-button
                            type="button"
                          >
                            <span class="btn__icon">
                              {% render 'icon' with '3d-model' %}
                            </span>
                            <span class="btn__text">
                              {{ 'products.product.xr_button' | t }}
                            </span>
                          </button>
                        {%- endif -%}
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                {% unless section.settings.slider_hide_arrows %}
                  <div class="sliderControl d-flex ">
                    <!-- next / prev arrows Starts -->
                    <div class=" slider-arrow" slide-prev>
                      <div class="sliderPagination__prev">
                        {% render 'slider-arrow-icon', arrow_direction: 'left' %}
                      </div>
                    </div>
                    <div class=" slider-arrow" slide-next>
                      <div class="sliderPagination__next">
                        {% render 'slider-arrow-icon', arrow_direction: 'right' %}
                      </div>
                    </div>

                    <!-- !next / prev arrows Ends -->
                  </div>
                {% endunless %}
              </div>
            </div>
            {% comment %}
              {%- if first_3d_model -%}
                <button
                  aria-label="{{ 'products.product.xr_button' | t }}"
                  class="btn product__xr-button"
                  data-first-model-id="{{ first_3d_model.id }}"
                  data-shopify-model3d-id="{{ first_3d_model.id }}"
                  data-shopify-title="{{ product.title | escape }}"
                  data-shopify-xr
                  data-shopify-xr-hidden
                  shopify-xr-button
                  type="button"
                >
                  <span class="btn__icon">
                    {% render 'icon' with '3d-model' %}
                  </span>
                  <span class="btn__text">
                    {{ 'products.product.xr_button' | t }}
                  </span>
                </button>
              {%- endif -%}
            {% endcomment %}
            {% if product_media.size > 1 %}
              <div class="sliderControl has-thumbnail-slider">
                {% comment %} <div class="sliderProgressBar" slide-progress></div> {% endcomment %}
                <div class="swiper-thumbnails{% if section.settings.slider_hide_arrows %} no-arrows {% endif %}">
                  <div class="swiper">
                    <div class="swiper-container" thumbnail-slider>
                      <div class="swiper-wrapper">
                        {% render 'product-media',
                          product_media: product_media,
                          render_preview_image: true,
                          product_first_media: product_first_media,
                          product_feature_media_id: product_feature_media_id
                        %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          </product-carousel>
          <noscript>
            {%- assign firstMedia = product.selected_or_first_available_variant.feature_image -%}
            {%- if firstMedia == blank -%}
              {%- assign firstMedia = product_media | where: 'media_type', 'image' | first -%}
            {%- endif -%}

            {% comment %} product.selected_or_first_available_variant.featured_media | default: medias | first {% endcomment %}
            <product-carousel class="carousel-active product-slider--{{ section.settings.display_options_layout }}  {% if layout_type == 'grid' or layout_type == 'grid-with-main-media' %} mobile-only {% endif %}">
              <div class="product-main-slide-container">
                {% render 'media', media: firstMedia, media_custom_identifier: 'carousel', section: section %}
              </div>
            </product-carousel>
          </noscript>
          {%- case layout_type -%}
            {%- when 'grid', 'grid-with-main-media' %}
              <div class="grid__layout {{ section.settings.display_options_layout }} desktop-only" product-grid-layout>
                <div
                  class="grid__layout__item position-relative"
                  data-media-target-id="media-{{ product_feature_media_id }}"
                >
                  {%- if enable_media_zoom and product_first_media.media_type == 'image' -%}
                    <product-zoom class="icon-product-zoom" data-index="{% increment j %}">
                      {%- render 'icon', icon: 'product-zoom-svg' -%}
                    </product-zoom>
                  {%- endif -%}
                  {% render 'media',
                    media: product_first_media,
                    show_preview_image: false,
                    media_autoplay: media_autoplay,
                    layout_type: layout_type,
                    section: section,
                    media_custom_identifier: 'grid'
                  %}
                </div>
                {% for media in medias %}
                  {% if media.id != product_feature_media_id %}
                    <div class="grid__layout__item position-relative" data-media-target-id="media-{{ media.id }}">
                      {%- if enable_media_zoom and media.media_type == 'image' -%}
                        <product-zoom class="icon-product-zoom" data-index="{% increment j %}">
                          {%- render 'icon', icon: 'product-zoom-svg' -%}
                        </product-zoom>
                      {%- endif -%}
                      {% render 'media',
                        media: media,
                        show_preview_image: false,
                        media_autoplay: media_autoplay,
                        layout_type: layout_type,
                        section: section,
                        media_custom_identifier: 'grid'
                      %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
          {%- endcase -%}
        </div>
      {% endif %}
      <div class="main-product__info fnt-16 {% unless product_media.size > 0 %}no-image {% endunless %}">
        <div class="main-product__details">
          {%- assign product_form_id = 'product-form-' | append: section.id -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {%- render block -%}

              {%- when 'vendor' -%}
                <p
                  class="fnt-14 main-product__vendor"
                  style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                  {{ block.shopify_attributes }}
                >
                  {{ product.vendor }}
                </p>

              {%- when 'rating' -%}
                {% comment %} Render product rating {% endcomment %}
                {% render "product-rating" with product: product, element_type: block, show_if_no_reviews: block.settings.show_if_no_reviews %}

              {%- when 'title' -%}
                {% comment %} Product Title {% endcomment %}
                <h1
                  aria-label="{{ product.title }}"
                  class="h2 main-product__heading fnt-heading clr-black"
                  style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                  {{ block.shopify_attributes }}
                  {%  assign product_title = product.title | split: '|' %}
                >
                  {{ product_title | first}}
                  <br>
                  {{ product_title | last}}
                </h1>
              

              {%- when 'price' -%}
                {% comment %} Product Price {% endcomment %}
                <div
                  id="price-{{ section.id }}"
                  role="status"
                  style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                  {{ block.shopify_attributes }}
                >
                  {% render 'price',
                    product: product,
                    on_sale: on_sale,
                    container_class: 'main-product__price__wrapper',
                    use_variant: true
                  %}
                  {%- if block.settings.show_taxes_notice -%}
                    <p class="fnt-16 price-taxes">
                      {%- if cart.taxes_included -%}
                        {{ 'products.product.taxes_included' | t }}
                      {%- else -%}
                        {{ 'products.product.taxes_excluded' | t }}
                      {%- endif -%}

                      {%- if shop.shipping_policy.body != blank -%}
                        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                      {%- endif -%}
                    </p>
                  {%- endif -%}
                </div>

              {%- when 'payment_installments' -%}
                {%- if product != blank -%}
                  <div
                    style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                    {{ block.shopify_attributes }}
                  >
                    {%- form 'product', product -%}
                      <input
                        name="id"
                        type="hidden"
                        value="{{ product.selected_or_first_available_variant.id }}"
                      >
                      {{ form | payment_terms }}
                    {%- endform -%}
                  </div>
                {%- endif -%}

              {%- when 'quantity_selector' -%}
                {% comment %} Product Quantity Selector {% endcomment %}
                <div style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}">
                  {% render 'product-quantity-selector',
                    form_id: product_form_id,
                    block: block,
                    product: product.selected_or_first_available_variant,
                    product_title: product.title
                  %}
                </div>

              {%- when 'variant_picker' -%}
                <div style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}" product-info>
                  {% render 'product-variant-selector',
                    product: product,
                    form_id: product_form_id,
                    block: block,
                    enable_product_deep_link: enable_product_deep_link
                  %}
                </div>

                {% comment %} Product Variant Selector {% endcomment %}
              {%- when 'buy_buttons' -%}
                <div style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}">
                  {% render 'product-buy-buttons', form_id: product_form_id, product: product, block: block %}
                </div>

              {%- when 'custom_liquid' -%}
                <div style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}">
                  {{ block.settings.custom_liquid }}
                </div>

                {% comment %} Product Custom liquid {% endcomment %}
              {%- when 'share' -%}
                <div
                  style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                  {{ block.shopify_attributes }}
                >
                  {% comment %} Product Share  {% endcomment %}
                  {% render 'product-share-button' with product: product %}
                </div>

              {%- when 'accordion' -%}
                {% render 'accordion', block: block %}

              {%- when 'description' -%}
                <div
                  class="RTE-content"
                  style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                >
                  {% if block.settings.collapse_content %}
                    <accordion-tab>
                      <details
                        accordionTab
                        aria-expanded="false"
                        class="accordion__item d-block"
                        {{ block.shopify_attributes }}
                      >
                        <summary aria-label="Toggle content">
                          <div class="accordion__item__head">
                            <p class="fnt-16">{{ 'products.product.description' | t }}</p>
                          </div>
                        </summary>
                        <div accordionBody class="accordion__item__body">
                          <div class="accordion__item__body-content">
                            {{ product.description }}
                          </div>
                        </div>
                      </details>
                    </accordion-tab>
                  {% else %}
                    {{ product.description }}
                  {% endif %}
                </div>

              {%- when 'complementary-products' -%}
                {% render 'complementary-product-layout', product_id: product.id, block: block %}
              {%- when 'pickup' -%}
                <link
                  rel="stylesheet"
                  media="all"
                  href="{{ 'section-pickup-availability.css' | asset_url }}"
                >
                <div
                  {{ block.shopify_attributes }}
                >
                  {%- liquid
                    assign pick_up_availabilities = product.selected_or_first_available_variant.store_availabilities | where: 'pick_up_enabled', true
                    assign is_pickup_available = false
                    if product.selected_or_first_available_variant.available and pick_up_availabilities.size > 0
                      assign is_pickup_available = true
                    endif
                  -%}
                  <pickup-availability
                    role="region"
                    class="pickup__availability d-block d-none"
                    data-section-id="{{ section.id }}"
                    {% if is_pickup_available %}
                      available
                      style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }};"
                    {% endif %}
                    data-root-url="{{ routes.root_url }}"
                    data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                    data-has-only-default-variant="{{ product.has_only_default_variant }}"
                    aria-label="{{ 'products.product.pickup_availability.drawer_head' | t }}"
                  >
                    <template>
                      <pickup-availability-preview class="pickup__availability-container d-flex">
                        <div class="pickup__availability-icon">
                          {%- render 'icon' with 'circular-cross' -%}
                        </div>
                        <div class="pickup-availability-info">
                          <p class="text-color fnt-16">
                            {{ 'products.product.pickup_availability.unavailable' | t }}
                          </p>
                          <button class="pickup-availability-button link link--green">
                            {{ 'products.product.pickup_availability.refresh' | t }}
                          </button>
                        </div>
                      </pickup-availability-preview>
                    </template>
                  </pickup-availability>
                </div>
              {%- when 'sku' -%}
                <variant-sku
                  {% if product.selected_or_first_available_variant.sku == blank %}
                    hidden
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  <div
                    style="padding-bottom: {{ block.settings.block_bottom_spacing | append: 'px' }}"
                    class="product-info__sku fnt-14"
                  >
                    <span>{{- 'products.product.sku' | t }}</span>
                    <span sku-code>{{ product.selected_or_first_available_variant.sku -}}</span>
                  </div>
                </variant-sku>
              {%- when 'badges' -%}
                {% render 'product-badges', block: block %}
              {%- when 'inventory' -%}
                {% render 'inventory-status', block: block, product: product %}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
{% unless section.settings.border_size == 'hide' %}
  {% if section.settings.border_position == 'both' or section.settings.border_position == 'bottom' %}
    {% unless section.settings.border_size == 'full_width' %}
      <div class="container">
    {% endunless %}
    <div class="spacer-wrapper color-{{ section.settings.color_scheme }}">
      <div
        class="spacer border-bottom"
      ></div>
    </div>
    {% unless section.settings.border_size == 'full_width' %}
      </div>
    {% endunless %}
  {% endif %}
{% endunless %}
{%- if enable_media_zoom -%}
  {%- render 'product-image-zoom-drawer',
    medias: medias,
    product_first_media: product_first_media,
    section: section,
    product_feature_media_id: product_feature_media_id
  -%}
{%- endif -%}

{% if section.settings.enable_sticky_add_to_cart %}
  <script src="{{ 'sticky-add-to-cart.js' | asset_url }}" defer></script>
  <link
    rel="stylesheet"
    media="all"
    href="{{ 'section-sticky-add-to-cart.css' | asset_url }}"
  >
  <sticky-add-to-cart>
    {% render 'sticky-add-to-cart-drawer', form_id: product_form_id %}
  </sticky-add-to-cart>
  <sticky-add-to-cart
    class="d-block sticky-add-to-cart color-{{ settings.drawer_color_scheme }} {% unless section.settings.sticky_add_to_cart_style == 'bar' %} sticky-add-to-cart--button-layout {% endunless %} {% if section.settings.show_only_for_mobile %}mobile-only{% endif %}"
  >
    <div class="container">
      {% if section.settings.sticky_add_to_cart_style == 'bar' %}
        {% render 'sticky-add-to-cart-bar-layout', form_id: product_form_id %}
      {% else %}
        {% render 'sticky-add-to-cart-button-layout', form_id: product_form_id %}
      {% endif %}
    </div>
  </sticky-add-to-cart>
{% endif %}
{%- if first_3d_model -%}
  <script id="ProductJSON-{{ product.id }}" type="application/json">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
{%- endif -%}

{%- liquid
  if product.selected_or_first_available_variant.featured_media
    assign seo_media = product.selected_or_first_available_variant.featured_media
  else
    assign seo_media = product.featured_media
  endif
-%}

<script type="application/ld+json">
  {{ product | structured_data }}
</script>

{% schema %}
{
  "name": "Product page",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Media",
      "info": "Learn more about [media types](https://help.shopify.com/en/manual/products/product-media)"
    },
    {
      "label": "Desktop media layout",
      "id": "display_options_layout",
      "type": "select",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "grid-with-main-media",
          "label": "Grid with main media"
        },
        {
          "value": "thumbnail-left",
          "label": "Thumbnails left (carousal)"
        },
        {
          "value": "thumbnail-bottom",
          "label": "Thumbnails bottom (carousal)"
        }
      ],
      "default": "thumbnail-bottom"
    },
    {
      "type": "select",
      "label": "Media position",
      "id": "desktop_media_position",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ],
      "info": "Position is automatically optimized for mobile."
    },
    {
      "type": "select",
      "label": "Media width",
      "id": "desktop_media_size",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ],
      "info": "Media is automatically optimized for mobile."
    },

    {
      "type": "select",
      "id": "image_aspect_ratio_desktop",
      "label": "Image ratio",

      "options": [
        {
          "label": "t:settings_schema.global.collection_card.image_ratio.option.label_1",
          "value": "portrait"
        },
        {
          "label": "t:settings_schema.global.collection_card.image_ratio.option.label_2",
          "value": "square"

{%- unless template == 'index' or template == 'cart' or template == '404' -%}
  {%- assign t = template | split: '.' | first -%}

  <nav
    aria-label="breadcrumbs"
    class="breadcrumbs"
    role="navigation"
  >
    <ol class="breadcrumbs__list">
      <li class="breadcrumbs__item">
        <a class="breadcrumbs__link" href="{{ routes.root_url }}">Home</a>
      </li>
      {%- case t -%}
        {%- when 'page' -%}
          <li class="breadcrumbs__item active">
            <a
              aria-current="page"
              class="breadcrumbs__link"
              href="{{ page.url }}"
            >
              {{- page.title -}}
            </a>
          </li>
        {%- when 'product' -%}
          {%- if collection.url -%}
            <li class="breadcrumbs__item">
              {{ collection.title | link_to: collection.url }}
            </li>
          {%- endif -%}
          <li class="breadcrumbs__item active">
            <a
              aria-current="page"
              class="breadcrumbs__link"
              href="{{ product.url }}"
            >
              {{- product.title | truncate: 40 -}}
            </a>
          </li>
        {%- when 'collection' and collection.handle -%}
          {%- if current_tags -%}
            <li class="breadcrumbs__item">
              {{ collection.title | link_to: collection.url }}
            </li>
            <li class="breadcrumbs__item active">
              {%- capture tag_url -%}
              {{ collection.url }}/{{ current_tags | join: "+" }}{%- endcapture -%}
              <a
                aria-current="page"
                class="breadcrumbs__link"
                href="{{ tag_url }}"
              >
                {{- current_tags | join: ' + ' -}}
              </a>
            </li>
          {%- else -%}
            <li class="breadcrumbs__item active">
              <a
                aria-current="page"
                class="breadcrumbs__link"
                href="{{ collection.url }}"
              >
                {{- collection.title -}}
              </a>
            </li>
          {%- endif -%}
        {%- when 'blog' -%}
          {%- if current_tags -%}
            <li class="breadcrumbs__item">
              {{ blog.title | link_to: blog.url }}
            </li>
            <li class="breadcrumbs__item active">
              {%- capture tag_url -%}
              {{ blog.url }}/tagged/{{ current_tags | join: "+" }}{%- endcapture -%}
              <a
                aria-current="page"
                class="breadcrumbs__link"
                href="{{ tag_url }}"
              >
                {{- current_tags | join: ' + ' -}}
              </a>
            </li>
          {%- else -%}
            <li class="breadcrumbs__item active">
              <a
                aria-current="page"
                class="breadcrumbs__link"
                href="{{ blog.url }}"
              >
                {{- blog.title -}}
              </a>
            </li>
          {%- endif -%}
        {%- when 'article' -%}
          <li class="breadcrumbs__item">
            {{ blog.title | link_to: blog.url }}
          </li>
          <li class="breadcrumbs__item active">
            <a
              aria-current="page"
              class="breadcrumbs__link"
              href="{{ article.url }}"
            >
              {{- article.title -}}
            </a>
          </li>
        {%- else -%}
          <li class="breadcrumbs__item active">
            <a
              aria-current="page"
              class="breadcrumbs__link"
              href="{{ request.path }}"
            >
              {{- page_title -}}
            </a>
          </li>
      {%- endcase -%}
    </ol>
  </nav>
{%- endunless -%}

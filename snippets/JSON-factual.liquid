
{
    "background_color": "{{ section.settings.bg_color }}",
    "swipeMedia":"{{ section.settings.swap_media_mobile }}",
    "blocks": [
        {% for block in section.blocks %}
            {
                "title": "{% if block.settings.title != blank %}{{ block.settings.title }} {% endif %}",
                "block_size": {{ forloop.index }},
                "description": "{{ block.settings.description }}",
                "button":"{% if block.settings.button_url != blank %}{{ block.settings.button }}{% endif %}",
                "url":"{{ block.settings.button_url }}",
                "hideImage":"{{ block.settings.hide_media_mobile }}",
                "image" :[ {% if block.settings.image != blank %}{ "src": "{{ block.settings.image | image_url }}", "height": "
                    {{- block.settings.image.height | default: 1080 -}}","width": "{{ block.settings.image.width | default: 1920 }}" }{%  endif %}],
                {% if block.settings.card1_text != blank or block.settings.card2_text!= blank or block.settings.card3_text!= blank %}
                    "cards": [
                        {
                            "text": "{{ block.settings.card1_text | escape }}",
                            "card_title": "{{ block.settings.card1_title }}",
                            "color": "{{ block.settings.card1_color }}",
                            "sup":"{{ block.settings.card1_sup_tag }}",
                            "imageSrc": [ 
                                {% if block.settings.first_card_image_1 != blank %}
                                    { "src": "{{ block.settings.first_card_image_1 | image_url }}", 
                                      "height": "{{- block.settings.first_card_image_1.height | default: 1080 -}}",
                                      "width": "{{ block.settings.first_card_image_1.width | default: 1920 }}" }
                                {% endif %}
                                {% if block.settings.first_card_image_2 != blank %}
                                      ,{ "src": "{{ block.settings.first_card_image_2 | image_url }}", 
                                      "height": "{{- block.settings.first_card_image_2.height | default: 1080 -}}",
                                      "width": "{{ block.settings.first_card_image_2.width | default: 1920 }}" }
                                {%  endif %}],
                            "imageMobile" :[ {% if block.settings.mobile_second_card_image_1 != blank %}{ "src": "{{ block.settings.mobile_second_card_image_1 | image_url }}", "height": "
                                {{- block.settings.mobile_second_card_image_1.height | default: 1080 -}}","width": "{{ block.settings.mobile_second_card_image_1.width | default: 1920 }}" }{%  endif %}],
                        },
                        {
                            "text": "{{ block.settings.card2_text | escape }}",
                            "card_title": "{{ block.settings.card2_title }}",
                            "color": "{{ block.settings.card2_color }}",
                            "sup":"{{ block.settings.card2_sup_tag }}",
                            "imageSrc": [ 
                                {% if block.settings.second_card_image_1 != blank %}
                                    { "src": "{{ block.settings.second_card_image_1 | image_url }}", 
                                      "height": "{{- block.settings.second_card_image_1.height | default: 1080 -}}",
                                      "width": "{{ block.settings.second_card_image_1.width | default: 1920 }}" }
                                    {% endif %}
                                    {% if block.settings.second_card_image_2 != blank %}
                                      ,{ "src": "{{ block.settings.second_card_image_2 | image_url }}", 
                                      "height": "{{- block.settings.second_card_image_2.height | default: 1080 -}}",
                                      "width": "{{ block.settings.second_card_image_2.width | default: 1920 }}" }
                                {%  endif %}],
                            "imageMobile" :[ {% if block.settings.mobile_second_card_image_2 != blank %}{ "src": "{{ block.settings.mobile_second_card_image_2 | image_url }}", "height": "
                                {{- block.settings.mobile_second_card_image_2.height | default: 1080 -}}","width": "{{ block.settings.mobile_second_card_image_2.width | default: 1920 }}" }{%  endif %}],
                        },
                        {
                            "text": "{{ block.settings.card3_text | escape }}",
                            "card_title": "{{ block.settings.card3_title }}",
                            "color": "{{ block.settings.card3_color }}",
                            "sup":"{{ block.settings.card3_sup_tag }}",
                            "imageSrc": [ 
                                {% if block.settings.third_card_image_1 != blank %}
                                    { "src": "{{ block.settings.third_card_image_1 | image_url }}", 
                                      "height": "{{- block.settings.third_card_image_1.height | default: 1080 -}}",
                                      "width": "{{ block.settings.third_card_image_1.width | default: 1920 }}" }
                                    {% endif %}
                                    {% if block.settings.third_card_image_2 != blank %}
                                      ,{ "src": "{{ block.settings.third_card_image_2 | image_url }}", 
                                      "height": "{{- block.settings.third_card_image_2.height | default: 1080 -}}",
                                      "width": "{{ block.settings.third_card_image_2.width | default: 1920 }}" }
                                {%  endif %}],
                            "imageMobile" :[ {% if block.settings.mobile_second_card_image_3 != blank %}{ "src": "{{ block.settings.mobile_second_card_image_3 | image_url }}", "height": "
                                {{- block.settings.mobile_second_card_image_3.height | default: 1080 -}}","width": "{{ block.settings.mobile_second_card_image_3.width | default: 1920 }}" }{%  endif %}],
                        }
                    ]
                {% endif %}
            }{%- unless forloop.last %}, {% endunless %}
        {% endfor %}
    ]
}


{% comment %} Countdown Timer {% endcomment %}
<countdown-timer
  class="timer_container"
  data-year="{{ block.settings.start_year }}"
  data-month="{{ block.settings.start_month }}"
  data-day="{{ block.settings.start_day }}"
  data-hours="{{ block.settings.start_hours }}"
  data-minute="{{ block.settings.start_minute }}"
  data-time-zone="{{ block.settings.time_zone }}"
  data-hide-on-completion="{{ block.settings.hide_timer_on_ending }}"
  data-section-id="shopify-section-{{ section.id }}"
  {% if block.settings.time_zone == 'shop_time_zone' -%}
    data-shop-time-zone="{{ "now" | date: "%Y-%m-%d %H:%M%:z" }}" data-timezone="{{ 'now' | date: '%:z' }}"
  {%- endif -%}
  style="--count-color: {{ block.settings.text }}; --count-bg: {{ block.settings.background }} "
  {{ block.shopify_attributes }}
>
  <div class="timer-box__container">
    <span class="timer-box__timer h1" data-counter-days>00</span>
    <span class="timer-box fn-14" data-set-days>{{ 'section.sales_banner.days' | t }}</span>
  </div>
  <div class="timer-box__divider">:</div>
  <div class="timer-box__container">
    <span class="timer-box__timer h1" data-counter-hours>00</span>
    <span class="timer-box fn-14" data-set-hours>{{ 'section.sales_banner.hrs' | t }}</span>
  </div>
  <div class="timer-box__divider">:</div>
  <div class="timer-box__container">
    <span class="timer-box__timer h1" data-counter-mins>00</span>
    <span class="timer-box fn-14" data-set-mins>{{ 'section.sales_banner.min' | t }}</span>
  </div>
  <div class="timer-box__divider">:</div>
  <div class="timer-box__container seconds__timer">
    <span class="timer-box__timer h1" data-counter-seconds>00</span>
    <span class="timer-box fn-14" data-set-secs>{{ 'section.sales_banner.sec' | t }}</span>
  </div>
</countdown-timer>

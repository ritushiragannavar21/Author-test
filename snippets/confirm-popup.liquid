{{ 'snippet-popup.css' | asset_url | stylesheet_tag }}
<popup-component class="popup color-{{ settings.drawer_color_scheme }}" popup-type="delete-address-popup">
  <div class="popup__container">
    <div class="popup__overlay" popup-overlay></div>
    <div class="popup__wrapper">
      <div class="popup__header">
        <h2 class="h3">{{ 'general.popup.delete_confirm_message' | t }}</h2>

      </div>

      {% comment %}
        <div class="popup__body">
        </div>

      {% endcomment %}
      <div class="popup__footer d-flex justify-content-center">
        <div class="btn-wrp">
          <button class="btn btn--fill btn--lg" popup-confirm>{{ 'general.popup.confirm' | t }}</button>
        </div>
        <div class="btn-wrp">
          <button class="btn btn--border btn--lg" popup-close>{{ 'general.popup.cancel' | t }}</button>
        </div>
      </div>
    </div>
  </div>
</popup-component>
